- model_class = Photo
.page-header
  %h1
    = t '.title', :default => [:'helpers.titles.show', 'Show %{model}'], :model => model_class.model_name.human.titleize
%p#notice= notice

.table-responsive
  %table.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th= "Language"
        %th= "Caption"
    %tbody
      - @photo.photo_translations.each do |translation|
        %tr
          %td
            = translation.language
          %td
            = translation.caption

%dl.dl-horizontal.show-page
  %dt
    %strong
      = "Name"
      \:
  %dd= @photo.name
  %dt
    %strong
      = "File"
      \:
  %dd= link_to image_tag(@photo.file_url(:thumb)), @photo.file.url, :target => "_blank" if @photo.file?

= link_to 'Edit', edit_place_photo_path(@place, @photo), :class => 'btn btn-default'
= link_to 'Back', place_photos_path(@place), :class => 'btn btn-default'