- model_class = Route
.page-header
  %h1= t '.title', :default => t("pages.header.routes")

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:subtitle)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:region)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:updated_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @routes.each do |route|
      %tr
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.id
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.title
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.subtitle
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.description
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.country
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.region
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.city
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = route.route_type
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = l route.created_at
        %td{:class =>'clickable-row', "data-link" => route_path(route)}
          = l route.updated_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_route_path(route), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), route_path(route), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_route_path, :class => 'btn btn-primary'
= link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn btn-primary'

:javascript
  $(function () {
    $("td[data-link]").click(function() {
      window.location = this.dataset.link
    });
  })
